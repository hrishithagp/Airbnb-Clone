<% layout("/layouts/boilerplate") -%>
<div id="filters" class="collapse navbar-collapse">
<div class="filter">
    <div><i class="fa-solid fa-fire" id="trending"></i></div>
    <p>Trending</p>
</div>
<div class="filter">
    <div><i class="fa-solid fa-bed" id="rooms"></i></div>
    <p>Rooms</p> 
</div>
<div class="filter">
    <div><i class="fa-solid fa-mountain-city" id="city"></i></div>
    <p>Iconic City</p>
</div>
<div class="filter">
    <div><i class="fa-solid fa-mountain" id="mountain"></i></div>
    <p>Mountains</p>
</div>
<div class="filter">
    <div><i class="fa-brands fa-fort-awesome" id="castle"></i></i></div>
    <p>Castles</p>
</div>
<div class="filter">
    <div><i class="fa-solid fa-person-swimming" id="pool"></i></div>
    <p>Amazing Pools</p>
</div>
<div class="filter">
    <div><i class="fa-solid fa-campground" id="camp"></i></div>
    <p>Camping</p>
</div>
<div class="filter">
    <div><i class="fa-solid fa-cow" id="farm"></i></div>
    <p>Farms</p>
</div>
<div class="filter">
    <div><i class="fa-regular fa-snowflake" id="arctic"></i></div>
    <p>Arctic</p>
</div>
</div>
<div class="form-check-reverse form-switch">
    <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
    <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
</div>
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <% for(let listing of allListings) { %>
            <a class="listing-link" href="/listings/<%= listing._id %>">
        <div class="card col listing-card">
            <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem"/>
            <div class="card-img-overlay"></div>
            <div class="card-body">
                <p class="card-text"><b><%= listing.title %></b></p>
                <br/>
                &#8377;<%= listing.price.toLocaleString("en-IN")%>/night</p>
            </div>
            </div>
        <%}%>
    </a>
        </div>
<script>
    let taxSwitch = document.getElementById("flexSwitchCheckDefault").addEventListener("click",()=>{
        console.log("clicked");
    })
    let filters = document.getElementsByClassName("filter");
    Array.from(filters).forEach(filter => {
    filter.addEventListener("click", async () => {
        let filterId = filter.querySelector('i').id;
        try {
            fetch(`/listings/filter/${filterId}`);
            console.log("clicked");
        } catch (error) {
            console.error('Error fetching listings:', error);
        }
    });
});
</script>

